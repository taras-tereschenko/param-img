# Database (Neon Postgres)
# Get this from your Neon dashboard or Vercel integration
DATABASE_URL=postgres://user:password@host/database?sslmode=require

# Better Auth
# Generate a random secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here
# Your app URL (http://localhost:3000 for development)
BETTER_AUTH_URL=http://localhost:3000

# Client-side app URL (must match BETTER_AUTH_URL)
# This is exposed to the browser (VITE_ prefix)
VITE_APP_URL=http://localhost:3000

# Google OAuth
# Get these from Google Cloud Console > APIs & Services > Credentials
# Redirect URI: {BETTER_AUTH_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Polar (Payments)
# Server environment: "sandbox" or "production" (defaults to production)
POLAR_SERVER=production
# Get this from Polar dashboard > Settings > Access Tokens
POLAR_ACCESS_TOKEN=your-polar-access-token
# Get this from Polar dashboard > Settings > Organization
POLAR_ORGANIZATION_ID=your-organization-id
# Get this from Polar dashboard > Settings > Webhooks
POLAR_WEBHOOK_SECRET=your-webhook-secret

# Polar Product IDs (from Polar dashboard > Products)
POLAR_PRODUCT_STARTER_ID=
POLAR_PRODUCT_STANDARD_ID=
POLAR_PRODUCT_PRO_ID=

# Polar Meter ID (required for credit tracking - must use Sum aggregation)
POLAR_METER_ID=

# Gemini AI
# Get this from Google AI Studio: https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key

# Upstash Redis (Rate Limiting - optional)
# Get these from Upstash console: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
